{
  "manifest_version": 2,
  "name": "Zotero Replication Checker",
  "version": "0.1.0",
  "description": "Privacy-first plugin to discover replications from FReD. Requires Zotero 7.0 or higher.",
  "author": "FORRT / Rohan Tondlekar",
  "homepage_url": "https://github.com/forrtproject/fred_zotero",
  "icons": {
    "48": "content/icons/favicon@0.5x.png",
    "96": "content/icons/favicon.png"
  },
  "applications": {
    "zotero": {
      "id": "replication-checker@forrt.org",
      "update_url": "https://github.com/forrtproject/fred_zotero/main/updates.json",  
      "strict_min_version": "7.0",
      "strict_max_version": "7.*"
    }
  }
}